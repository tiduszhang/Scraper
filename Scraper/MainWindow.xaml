<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
        x:Class="Scraper.MainWindow"
        xmlns:model="clr-namespace:Scraper.BAL;assembly=Scraper.BAL"
        mc:Ignorable="d"
        d:DataContext="{d:DesignInstance Type=model:MainViewModel}"
        Title="爬网-淘宝" >
    <Grid >
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>
        <GroupBox Header="浏览区" Grid.Column="0" Grid.Row="0" Margin="5">
            <WindowsFormsHost  Margin="-5">
                <model:WebBrowserEx x:Name="webBrowser" Dock="Fill"/>
            </WindowsFormsHost>
        </GroupBox>
        <GroupBox Header="参数设置" Grid.Column="1" Grid.Row="0"  Margin="5">
            
        </GroupBox>

    </Grid>
</Window>
